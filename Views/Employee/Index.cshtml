@{
    int index = 1;
}

<h1>index</h1>



@model List<Employee>
 <table>
     <thead>
         <tr>
            <th>#</th>
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
            <th>Show Dependents</th>

         </tr>
     </thead>
     <tbody>
        @foreach (var employee in Model)
        {   

            <tr>
                <td>@(index++)</td>
                <td>@(employee.Fname + " " + employee.Lname + " " + employee.Minit)</td>
                <td><a href="/Employee/GetById/@employee.SSN">Details</a></td>
                <td><a href="/Employee/Update/@employee.SSN">Update</a></td>
                <td><a href="/Employee/GetById/@employee.SSN">Delete</a></td>
                <td><a href="/Employee/GetAllDependent/@employee.SSN">Show Dependents</a></td>


             </tr>
        }
     </tbody>
  </table>